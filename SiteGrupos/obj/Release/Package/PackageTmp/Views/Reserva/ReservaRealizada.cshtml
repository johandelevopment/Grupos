<section id="reserva">
    <div class="spinVuelos" id="spinnerVuelos" style="display:none">
        <div class="preloaderVuelos"></div>
    </div>
    <div class="card">
        <div class="col-lg-12 col-sm-12">
            <div class="row">
                <div class="col-lg-6 col-sm-12 text-center">
                    <div class="mt-5">
                        <h3 class="pb-4">Tu reserva se ha realizado con éxito</h3>
                        <h3>Número de reserva: </h3>
                        <h2>@ViewData["CodReserva"]</h2>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-12">
                    <div class="row">
                        <div class="col-lg-6 mt-3 mb-3" style="border: solid 1px black">
                            <div class="text-center pt-2 pb-3"><h5>Resumen de Reserva</h5></div>
                            <div style="display:inline-flex; border-bottom: solid 1px black;  border-top: solid 1px black; border-left: solid 1px black; border-right: solid 1px black; width:100%">
                                <p style="width: 50%; border-right: solid 1px black;">Adultos:</p>
                                <span style=" width: 50%; text-align: right;" id="numAdt">@ViewData["numAdt"]</span>
                            </div>

                            <div style="display:inline-flex; border-bottom: solid 1px black; border-left: solid 1px black; border-right: solid 1px black; width:100%">
                                <p style="width: 50%; border-right: solid 1px black;">Niños:</p>
                                <span style=" width: 50%; text-align: right;" id="numChd">@ViewData["numChd"]</span>
                            </div>

                            <div style="display:inline-flex; border-bottom: solid 1px black; border-left: solid 1px black; border-right: solid 1px black; width:100%">
                                <p style="width: 50%; border-right: solid 1px black;">Tarifa:</p>
                                <span style=" width: 50%; text-align: right;">$ @ViewData["tarifaPlena"] COP</span>
                            </div>

                            <div style="display:inline-flex; border-bottom: solid 1px black; border-left: solid 1px black; border-right: solid 1px black; width:100%">
                                <p style="width: 50%; border-right: solid 1px black;">Impuestos y tasas:</p>
                                <span style=" width: 50%; text-align: right;">$ @ViewData["impuesto"] COP</span>
                            </div>

                            <div style="display:inline-flex; width:100%; height: 60px; align-items: flex-end;">
                                <strong style="width: 50%;"><p>TOTAL:</p></strong>
                                <strong style=" width: 50%; text-align: right;"><span>$ @ViewData["tarifaTotal"] COP</span></strong>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12">
                            <img class="epayco" style="position: relative; top: 25px; left: 10px; width: 260px;" src="~/Images/epayco.png" alt="Alternate Text" />
                            <div class="col-12 divBotonVuelos">
                                <div id="btnPagar"></div>
                            </div>
                        </div>
                    </div>

                    <input id="tarifaPlena" style="display:none" value="@ViewData["tarifaPlenaNum"]" />
                    <input id="impuesto" style="display:none" value="@ViewData["impuestoNum"]" />
                    <input id="tarifaTotal" style="display:none" value="@ViewData["tarifaTotalNum"]" />
                </div>
            </div>
       
        </div>
    </div>
</section>

